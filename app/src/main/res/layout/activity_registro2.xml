<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registro2">

    <!-- Botón de regresar, fijo en la parte superior izquierda -->
    <ImageView
        android:id="@+id/btn_regresar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/atras"
        android:contentDescription="Regresar"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Imagen del torneo, debajo del botón de regresar -->
    <ImageView
        android:id="@+id/imagen_torneo"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:src="@drawable/futbol"
        android:scaleType="centerCrop"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_regresar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Descripción del torneo -->
    <TextView
        android:id="@+id/descripcion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Torneo de Fútbol - ¡Inscríbete para participar!"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@+id/imagen_torneo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Información de jugadores inscritos -->
    <TextView
        android:id="@+id/jugadores_inscritos"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Jugadores inscritos: 20"
        android:textSize="16sp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@+id/descripcion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Horarios del torneo -->
    <TextView
        android:id="@+id/horarios"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Horarios: 09:20 AM - 12:00 PM"
        android:textSize="16sp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@+id/jugadores_inscritos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botón para inscribirse -->
    <Button
        android:id="@+id/btn_inscribirse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inscribirse"
        android:textColor="#FFFFFF"
        android:backgroundTint="#3B8BFF"
        android:layout_marginTop="24dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@+id/horarios"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botón de WhatsApp -->
    <ImageButton
        android:id="@+id/btnWhatsApp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/social"
        android:background="@null"
        android:contentDescription="Botón de WhatsApp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_inscribirse"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contactanos"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="555dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
